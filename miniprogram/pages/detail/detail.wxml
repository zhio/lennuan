<view class="page">
  <view class="section">
  <view class="section__title">历史上的今天</view>
  <picker mode="date" value="{{date}}" start="2015-01-01" end="2020-01-01" bindchange="bindDateChange">
    <view class="picker">
      当前选择: {{date}}
    </view>
    </picker>
  </view>
  <view wx:for="{{tasks}}">
  <view class="page__hd">
    <view class="page__title">{{ item.year}}年{{yueRi}}</view>
    <view class="page__title">{{ item.title }}</view>
    <view class="page__desc">{{ item.desc }}...</view>
    </view>
  </view>
</view>


.temperature{
  font-size: xx-large;
  text-align: center;
  text-shadow: 5px 5px 5px #d8d3d3;
}
.summary{
  font-size: x-large;
  text-align: center;
  text-shadow: 5px 5px 5px #d8d3d3;
}
.img{
  width: 200rpx;
  height: 200rpx;
  vertical-align: middle;
}
.scroll {

  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
}
.scroll-x {
  display: flex;
  flex-direction: row; 
}
.scroll-x .item {
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:0 80rpx 0 0;
}
.scroll-x .item:last-child {
  padding: 0;
}
.scroll-x .item .item-hd {
  padding-bottom: 15rpx;
}
.scroll-x .item .item-bd {
  font-weight: bold;
}
.scroll-x .item .img {
  width:50rpx;
  height:50rpx;
  vertical-align:middle;
  padding-bottom: 15rpx;
}